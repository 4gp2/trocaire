<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.trocaire_disease_outbreak_manager">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/trocaire_launcher_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Fragment_main"
            android:label="@string/title_activity_fragment_main"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".Sign_in"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Patient_details" />
        <activity android:name=".Thermometer" />
        <activity android:name=".Symptoms_input" />
        <activity android:name=".Rash_locator_front" />
        <activity android:name=".Rash_locator_back" />
    </application>
</manifest>